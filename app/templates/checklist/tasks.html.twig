    <h2>Liste des taches :</h2>
    <ul id="ul-task-list">	
		{% for task in tasks %}

			{% include 'checklist/task.html.twig' with { 'task': task } %}


		{% endfor %}
    </ul>
	{% if formajout %}
		{{ form_start(formajout, {'action': path('checklist_add_task'), 'attr': {'id': 'form-add-task' }}) }}
			{{ form_row(formajout.task) }}
			{{ form_row(formajout.newTask) }}
			{{ form_row(formajout.submit, {'attr': {'class': 'formajout_submit'}}) }}

			{{ form_row(formajout.checklist_id) }}

		{{ form_end(formajout) }}
	{% endif %}