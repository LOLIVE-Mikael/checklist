{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('tache') }}
{% endblock %}

{% block title %}Task List{% endblock %}

{% block body %}
	<div id="task-list">
    {% for taskId, form in forms %}
		{% include 'taches/formtask.html.twig' with { 'form': form, 'taskId': taskId } %}
    {% endfor %}
	</div>
	
	{{ form_start(newTaskForm, {'action': path('taches_creation'), 'attr': {'id': 'new_task'}}) }}
        {{ form_row(newTaskForm.titre) }}
		{{ form_row(newTaskForm.id) }}
		{{ form_row(newTaskForm.save, {'attr': {'id': 'save_button'}}) }}
    {{ form_end(newTaskForm) }}

{% endblock %}