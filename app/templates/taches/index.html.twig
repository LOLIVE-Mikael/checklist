{% extends 'base.html.twig' %}

{% block title %}Task List{% endblock %}

{% block body %}
    {% for taskId, form in forms %}
	
			{{ form_start(form, {'action': path('taches_modification', {'taskId': taskId}), 'attr': {'id': 'form_task_' ~ taskId, 'class': 'form-modification'}}) }}
				{{ form_row(form.titre) }}
                {{ form_row(form.save) }}
                {{ form_row(form.delete) }}
            {{ form_end(form) }}
    {% endfor %}
	{{ form_start(newTaskForm, {'action': path('taches_creation'), 'attr': {'id': 'new_task'}}) }}
        {{ form_row(newTaskForm.titre) }}
		{{ form_row(newTaskForm.save) }}
    {{ form_end(newTaskForm) }}
{% endblock %}